{
    "manifest_version": 3,
    "name": "Cookie Sync",
    "version": "1.0.0",
    "description": "Sync cookies from configured websites to cloud storage services (Firebase, Supabase, AWS S3)",
    "permissions": [
        "cookies",
        "storage",
        "activeTab",
        "webRequest"
    ],
    "host_permissions": [
        "https://binance.com/*",
        "https://*.binance.com/*"
    ],
  "background": {
    "service_worker": "dist/background/service-worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "dist/popup.html",
    "default_icon": {
      "16": "dist/icons/icon16.png",
      "32": "dist/icons/icon32.png",
      "48": "dist/icons/icon48.png",
      "128": "dist/icons/icon128.png"
    }
  },
    "options_page": "dist/options.html",
    "icons": {
      "16": "dist/icons/icon16.png",
      "32": "dist/icons/icon32.png",
      "48": "dist/icons/icon48.png",
      "128": "dist/icons/icon128.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}